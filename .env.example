# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/english-quiz?retryWrites=true&w=majority

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Admin Authentication
ADMIN_API_KEY=your-secure-admin-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Vector Search
VECTOR_SEARCH_INDEX_NAME=chunk_vector_index
VECTOR_SEARCH_NUM_CANDIDATES=100
VECTOR_SEARCH_LIMIT=5

# Quiz Settings
DEFAULT_QUESTIONS_PER_QUIZ=5
MAX_QUESTIONS_PER_QUIZ=10
MAX_SCORE_PER_QUESTION=5

# Chat Settings
MAX_CONVERSATION_HISTORY=10
MAX_TOKENS_RESPONSE=500

# Chunking Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# CORS
CORS_ORIGINS=*
